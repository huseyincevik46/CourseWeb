

@model Candidate

<form method="post" asp -controller="Course"  asp-action="Apply" >
  

    <fieldset>
        <legend class="text-center">Select One Course</legend>
        <div class="courses">
            <div class="course-card">
                <img src="~/asp.net.png" alt="ASP.NET Core MVC" class="course-img">
                <div class="course-info">
                    <h5>ASP.NET Core MVC</h5>
                    <p>Core yapısı ,C#</p>
                    <input type="radio" asp-for="SelectedCourse" value="ASP.NET Core MVC" checked />
                </div>
            </div>

            <div class="course-card">
                <img src="~/Api.png" alt="ASP.NET Core API" class="course-img">
                <div class="course-info">
                    <h5>ASP.NET Core API</h5>
                   <p>Api Bağlantısı</p> 
                    <input type="radio" asp-for="SelectedCourse" value="ASP.NET Core Api" />
                </div>
            </div>

            <div class="course-card">
                <img src="~/laravel.png" alt="Laravel" class="course-img">
                <div class="course-info">
                    <h5>Laravel</h5>
                   <p>Ekili Laravel Ögrenimi</p>
                    <input type="radio" asp-for="SelectedCourse" value="Laravel" />
                </div>
            </div>
        </div>
    </fieldset>

    <div class="text-center mt-3">
        <button class="btn btn-primary" type="submit">Apply</button>
    </div>
</form>
<style>


body {
    background: linear-gradient(135deg, #2c3e50, #8e44ad);
    color: white;
    font-family: Arial, sans-serif;
}

.display-6 {
    font-size: 2rem;
    font-weight: bold;
}

form {
    background-color: #34495e;
    padding: 20px;
    border-radius: 8px;
    box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
}

form .form-group {
    margin-bottom: 20px;
}

.courses {
    display: flex;
    justify-content: space-around;
    margin-top: 20px;
}

.course-card {
    background-color:aliceblue;
    border-radius: 10px;
    padding: 20px;
    width: 30%;
    text-align: center;
    box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease;
}

.course-card:hover {
    transform: translateY(-5px);
}

.course-img {
    width: 100%;
    height: 150px;
    object-fit: cover;
    border-radius: 8px;
}

.course-info {
    margin-top: 15px;
}

.course-info h5 {
    font-size: 1.2rem;
    margin-bottom: 10px;
}

.course-description {
    width: 100%;
    padding: 10px;
    margin-top: 10px;
    border-radius: 5px;
    border: 1px solid #ccc;
    resize: none;
    background-color: #ecf0f1;
    color: #2c3e50;
}

textarea:focus, input:focus {
    outline: none;
    border-color: #8e44ad;
}

.btn-primary {
    background-color: #8e44ad;
    border: none;
    font-size: 1rem;
    padding: 12px 30px;
    border-radius: 30px;
    cursor: pointer;
    transition: background-color 0.3s ease;
}

.btn-primary:hover {
    background-color: #9b59b6;
}
</style>
